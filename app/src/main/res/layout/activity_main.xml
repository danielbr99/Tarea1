<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ColorPickerActivity">

    <TextView
        android:id="@+id/tvColorp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Color palette"
        android:textSize="40dp"
        android:textAlignment="center"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:background="@color/black"
        android:textColor="@color/white" />

            <FrameLayout
                android:layout_width="340dp"
                android:layout_height="500dp"
                android:layout_gravity="center"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvColorCards"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/h1"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        app:cardBackgroundColor="#33000000"
                        app:cardElevation="0dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="H1(20%)"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"/>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/h2"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        app:cardBackgroundColor="#800000FF"
                        android:layout_marginTop="60dp"
                        app:cardElevation="0dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="H2(50%)"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"/>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/h3"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        app:cardBackgroundColor="#CC20B2AA"
                        android:layout_marginTop="60dp"
                        app:cardElevation="0dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="H3(80%)"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"/>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </FrameLayout>





        <androidx.cardview.widget.CardView
            android:id="@+id/abChangeColor"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="60dp"
            android:backgroundTint="@color/black"
            app:cardElevation="0dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="CHANGE COLOR"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:gravity="center"/>
        </androidx.cardview.widget.CardView>


</FrameLayout>